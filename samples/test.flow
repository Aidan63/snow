{
  project:{
    build : {
      defines[web] : ['snow_web']
      defines[mac || windows || linux || android || ios] : ['snow_native']
    },
    files[snow_web && debug] : {
      howlerjs : { path:'flow/web/lib/howler.js => lib/howler.js', not_listed:true } 
    },
    files[snow_web] : {
      index : { path:'flow/web/index.html => index.html', template:'project', not_listed:true },
      howlerjs : { path:'flow/web/lib/howler.min.js => lib/howler.js', not_listed:true },
    }
  },

  snow: {
    modules[snow_native]:{
      assets:'snow.core.native.assets.Assets',
      audio:'snow.core.native.audio.Audio',
      io:'snow.core.native.io.IO',
      input:'snow.core.native.input.Input',
      windowing:'snow.core.native.window.Windowing',
    },
    modules[snow_web] : {
      assets:'snow.core.web.assets.Assets',
      audio:'snow.core.web.audio.Audio',
      io:'snow.core.web.io.IO',
      input:'snow.core.web.input.Input',
      windowing:'snow.core.web.window.Windowing',
    }
  }
}


